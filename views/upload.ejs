<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>이미지 업로드</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
        background-color: #f4f4f4;
        color: #333;
      }
      .container {
        max-width: 500px;
        margin: auto;
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      h1 {
        text-align: center;
        color: #333;
      }
      label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
      }
      input[type="text"],
      input[type="file"] {
        width: calc(100% - 22px);
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
      }
      button {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
      }
      button:hover {
        background-color: #0056b3;
      }
      .error-message {
        background-color: #f8d7da;
        color: #721c24;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #f5c6cb;
        border-radius: 4px;
        text-align: center;
      }
      .uploaded-list {
        margin-top: 30px;
      }
      .uploaded-list h2 {
        text-align: center;
      }
      .uploaded-list ul {
        list-style: none;
        padding: 0;
      }
      .uploaded-list li {
        background: #e9ecef;
        padding: 10px;
        margin-bottom: 8px;
        border-radius: 4px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .uploaded-list li a {
        color: #007bff;
        text-decoration: none;
        word-break: break-all;
      }
      .uploaded-list li a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>이미지 업로드</h1>

      <% if (typeof error !== 'undefined' && error) { %>
      <div class="error-message"><%= error %></div>
      <% } %>

      <form action="/upload" method="POST" enctype="multipart/form-data">
        <div>
          <label for="imageName">이미지 이름 (확장자 제외):</label>
          <input type="text" id="imageName" name="imageName" required />
        </div>
        <div>
          <label for="image">이미지 파일:</label>
          <input
            type="file"
            id="image"
            name="image"
            accept="image/*"
            required
          />
        </div>
        <button type="submit">업로드</button>
      </form>

      <div class="uploaded-list">
        <h2>내가 업로드한 이미지 목록</h2>
        <ul id="imageList"></ul>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const imageList = document.getElementById("imageList");
        let uploadedImages =
          JSON.parse(localStorage.getItem("uploadedImages")) || [];

        // 현재 호스트 기준으로 full url 생성
        const baseUrl = window.location.protocol + "//" + window.location.host;

        function renderImageList() {
          imageList.innerHTML = ""; // 목록 초기화
          if (uploadedImages.length === 0) {
            const listItem = document.createElement("li");
            listItem.textContent = "아직 업로드한 이미지가 없습니다.";
            imageList.appendChild(listItem);
            return;
          }
          uploadedImages.forEach((imgName) => {
            const listItem = document.createElement("li");
            const link = document.createElement("a");
            link.href = `${baseUrl}/${imgName}`;
            link.textContent = `${baseUrl}/${imgName}`;
            link.target = "_blank";
            listItem.appendChild(link);
            imageList.appendChild(listItem);
          });
        }

        renderImageList();
      });
    </script>
  </body>
</html>
